<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import com.jfoenix.controls.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root id="AnchorPane" type="AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox layoutX="152.0" layoutY="129.0" spacing="35.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="TOP_RIGHT" maxWidth="1.7976931348623157E308">
               <children>
                  <JFXTextField fx:id="txtActionName" labelFloat="true" promptText="Actie beschrijving" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Roboto" size="20.0" />
                     </font>
                     <styleClass>
                        <String fx:value="textFieldBiggerSize" />
                        <String fx:value="textFieldWhite" />
                     </styleClass></JFXTextField>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets top="25.0" />
               </padding>
            </HBox>
            <HBox alignment="TOP_RIGHT" spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <JFXButton fx:id="btnNew" onAction="#addNewAction" styleClass="button-raised" text="Nieuwe actie" />
                  <JFXButton fx:id="btnSave" onAction="#saveAction" styleClass="button-raised" text="Opslaan actie" />
                  <JFXButton fx:id="btnRemove" onAction="#removeAction" styleClass="button-raised" text="Verwijder actie" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </children>
</fx:root>
